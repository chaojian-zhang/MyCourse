<Window x:Class="MyCourse.Windows.TempIcon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCourse.Windows"
        mc:Ignorable="d"
        Title="TempIcon" Height="300" Width="300">
    <Grid>
        <Border BorderThickness="1" BorderBrush="#FFFF8585" CornerRadius="2" Width="64" Height="64"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE65A5A" Offset="0.996"/>
                    <GradientStop Color="#FFFF9F9F"/>
                </LinearGradientBrush>
            </Border.Background>
            <Label Content="My" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="40" Padding="0" Margin="0" FontFamily="Segoe">
                <Label.Effect>
                    <DropShadowEffect ShadowDepth="0"/>
                </Label.Effect>
            </Label>
        </Border>
    </Grid>
</Window>
